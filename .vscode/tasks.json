{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build current C file",
      "type": "shell",
      "command": "/usr/bin/gcc",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile a single C file using gcc"
    }
  ]
}
